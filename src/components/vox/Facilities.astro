---
import SubTitle from "../commons/displayers/SubTitle.astro";
import IconArrowLeft from "../commons/icons/IconArrowLeft.astro";
import IconArrowRight from "../commons/icons/IconArrowRight.astro";
import Scripts from "./Scripts.astro";
---

<!-- EL VOX - FACILITIES-->
<div class="flex flex-col items-center justify-center space-y-24 max-w-full">
  <SubTitle subtitle="Instalaciones" />

  <div class="glide">
    <div class="glide__track" data-glide-el="track">
      <ul class="glide__slides">
        <li class="glide__slide"><img src="/vox-landing/assets/media/img/images/image-05.png" alt="imagen 04" class="w-[400px] h-auto" /></li>
        <li class="glide__slide"><img src="/vox-landing/assets/media/img/images/image-06.jpg" alt="imagen 01" class="w-[400px] h-auto" /></li>
        <li class="glide__slide"><img src="/vox-landing/assets/media/img/images/image-07.jpg" alt="imagen 02" class="w-[400px] h-auto" /></li>
        <li class="glide__slide"><img src="/vox-landing/assets/media/img/images/image-08.jpg" alt="imagen 02" class="w-[400px] h-auto" /></li>
        <li class="glide__slide"><img src="/vox-landing/assets/media/img/images/image-09.jpg" alt="imagen 02" class="w-[400px] h-auto" /></li>
      </ul>
    </div>

    <div class="glide__bullets" data-glide-el="controls[nav]">
      <button class="glide__bullet" data-glide-dir="=0"></button>
      <button class="glide__bullet" data-glide-dir="=1"></button>
      <button class="glide__bullet" data-glide-dir="=2"></button>
      <button class="glide__bullet" data-glide-dir="=3"></button>
      <button class="glide__bullet" data-glide-dir="=4"></button>
      <button class="glide__bullet" data-glide-dir="=5"></button>
    </div>

    <div class="glide__arrows" data-glide-el="controls">
      <button class="glide__arrow glide__arrow--left border-none shadow-none" data-glide-dir="<">
        <IconArrowLeft />
      </button>
      <button class="glide__arrow glide__arrow--right border-none shadow-none" data-glide-dir=">">
        <IconArrowRight />
      </button>
    </div>
  </div>

  <Scripts />
</div>
